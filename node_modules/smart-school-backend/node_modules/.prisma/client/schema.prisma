generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  user_id    Int      @id @default(autoincrement()) @map("user_id")
  username   String   @unique
  password   String   @map("password")
  email      String   @unique
  role       String
  created_at DateTime @default(now()) @map("created_at")

  @@map("users")
}
